{
  "permissions": {
    "allow": [
      "Bash(mv:*)",
      "Bash(npm install:*)",
      "Bash(npm uninstall:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "git add . && git commit -m 'Auto-commit before Claude changes' || true"
          }
        ]
      }
    ]
  }
}